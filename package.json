    "table": "^6.8.2",
    "tiny-invariant": "^1.3.3",
    "yaml": "^2.6.0",
    "zx": "^8.2.1"
  },
  "peerDependencies": {
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/bun": "latest",
    "@types/lodash-es": "^4.17.12",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "tsc-alias": "^1.8.10"
